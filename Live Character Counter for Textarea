<body>
    <div class="counter-container">
        <label for="liveTextarea">Live Character Counter</label>
        <textarea id="liveTextarea" placeholder="Start typing..."></textarea>
        <div>Characters: <span id="charCount">0</span></div>
    </div>

    <script>
        const textarea = document.getElementById('liveTextarea');
        const charCount = document.getElementById('charCount');

        textarea.addEventListener('input', () => {
            charCount.textContent = textarea.value.length;
        });
    </script>
</body>
